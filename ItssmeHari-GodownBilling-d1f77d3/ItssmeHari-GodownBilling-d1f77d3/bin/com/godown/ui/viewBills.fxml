<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.godown.ui.ViewBillsController">
    <Label text="View Bills" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
   <!-- Add DatePicker for filtering -->
    <DatePicker fx:id="datePicker" promptText="Select Date" style="-fx-padding: 10px;" />
   
    <TableView fx:id="billsTable">
        <columns>
            <TableColumn text="Bill No" fx:id="billNumberColumn" />
            <TableColumn fx:id="dateColumn" text="Date" />
            <TableColumn text="Customer Name" fx:id="customerNameColumn" />
            <TableColumn text="Rice Variety" fx:id="riceVarietyColumn" />
            <TableColumn text="Weight (kg)" fx:id="weightColumn" />
            <TableColumn text="Cost per Kg" fx:id="costColumn" />
            <TableColumn text="Total Price" fx:id="totalPriceColumn" />
        </columns>
    </TableView>
</VBox>
